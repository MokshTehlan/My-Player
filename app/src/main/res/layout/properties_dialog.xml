<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/videoBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:id="@+id/file_name"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="this is a sample text for heading what u knw about rolling down in the deep when yur brain goes numb u can call"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="25dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="File"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/file_name_full"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="this is a sample text for heading what u knw about rolling down in the deep when yur brain goes numb u can call"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/size"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/length"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ok"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/onselection"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="end"/>
</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>